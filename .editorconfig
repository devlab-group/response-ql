# Matches multiple files with brace expansion notation
# Set default charset
[*]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# Indentation for json files
[*.json]
indent_style = space
indent_size = 2

# Matches the exact files either package.json or .travis.yml
[{.travis.yml,.eslintrc}]
indent_style = space
indent_size = 2
